[Unit]
Description=Aila Monitor Service
After=network.target

[Service]
Type=simple
User=aila
Group=aila
EnvironmentFile=/etc/aila/env.d/monitor.conf
WorkingDirectory=/opt/aila/monitor
ExecStart=/usr/bin/python3 -m main.collector --config /etc/aila-monitor/monitor.yaml
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
