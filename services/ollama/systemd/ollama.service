[Unit]
Description=Aila Ollama LLM Service
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=aila
Group=aila
EnvironmentFile=/etc/aila/env.d/ollama.conf
ExecStart=/usr/bin/ollama serve --config /etc/ollama/ollama.yaml
Restart=on-failure
RestartSec=5
LimitNOFILE=65535

[Install]
WantedBy=multi-user.target
